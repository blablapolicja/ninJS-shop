@import ("includes.styl");

.grid {
  width: ($cell-size * 4) + ($cell-side-margin * 2) * 4;
  padding: 10px;
  margin: 0 auto;
  /*box-shadow: 0 0 0 1px red;
  opacity: 0.5; */
}

.cell {
  float: left;
  margin: $cell-side-margin;
  position: relative;

  &_width_1-4 {
    width: $cell-size;
  }

  &_width_2-4 {
    width: $cell-size*2 + $cell-side-margin*2;
  }

  &_width_3-4 {
    width: $cell-size*3 + $cell-side-margin*3;
  }

  &_width_4-4 {
    width: $cell-size*4 + $cell-side-margin*4;
  }

  &_height_1-2 {
    height: $cell-size;
  }

  &_height_2-2 {
    height: $cell-size*2 + $cell-side-margin*2;
  }

  &_right {
    float: right;
  }

  &_level-up {
    margin-top: -($cell-size + $cell-side-margin);
  }
}