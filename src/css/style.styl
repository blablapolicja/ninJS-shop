@import url("http://fonts.googleapis.com/css?family=Roboto")
@import url("normalize.css")

body
  font-family 'Roboto', sans-serif

p
  margin 0

.clearfix
  clear both

.mockup
  width 1150px
  height 1435px
  position absolute
  background url('../img/project_hovered.jpg') no-repeat
  opacity 0.5
  margin 0 100px
  display none

.item-gallery
  width 1128px
  padding 10px
  margin 0 auto
  /*box-shadow 0 0 0 1px red
  opacity 0.5 */

[class*='column-']
  float left
  padding 0
  position relative

.column-1-4
  width 272px
  margin 5px

.column-2-4
  width 554px
  margin 5px

.column-3
  width 846px

.column-4
  width 1128px

.right
  float right

.top
  margin-top -277px

.y1
  height: 272px

.y2
  height: 554px

.item
  &-cover
    position relative

    &-image
      display block

    &-info
      width 100%
      position absolute
      left 0
      bottom 0
      height 72px
      background rgba(0, 0, 0, 0.5)

      &-container
        float left
        width 230px
        margin 10px 0 0 20px
        text-align center

        &_left
          text-align left
          margin-left 30px

        &_right
          float right
          margin-right 30px
          text-align right


      &__name
        font-size 14px
        line-height 1.0
        font-style italic
        color white

        &_text-align_centered
          text-align center

        &_float_right
          float right

      &__price
        color white
        font-size 12px
        font-weight bold

        &_line-through
          text-decoration line-through
          font-style italic
          font-weight normal


  &-undercover
    position absolute
    top 0
    left 0
    width 100%
    background white
    opacity 10
    transition 400ms ease
    &:hover
      opacity 1
      box-shadow 0 0 5px 1px rgba(0, 0, 0, 0.3)

  &-content
    position relative
    float left
    width 100%
    height 272px

    &_left-side
      margin-top: 43px
      width 50%
      float left

    &_right-side
      margin-top: 43px
      width 50%
      float right

    &_center
      width 40%
      margin 0 auto

    &_width_x1
      width 272px

    &_width_x2
      width 554px

    &_height_y1
      height 272px

    &_height_y2
      height 554px

    &_bottom
      height 282px
      &:before
        content ""
        position absolute
        top 5px
        left 12%
        width 76%
        border-bottom 1px solid #cccccc

    &_left
      &:before
        content ""
        position absolute
        top 25%
        left 0
        height 50%
        border-left 1px solid #cccccc

    &_narrow
      width 90%
      margin 0 auto


    &_wide
      width 65%
      margin 43px auto 0

    &__image
      float right
      padding-right 10px

      &_position_center
        float none
        margin 150px auto 0
        display block

    &__price
      font-size 12px
      letter-spacing 0.4px

    &__sale
      color #c91000
      font-size 18px

    &__name
      max-width: 175px
      font-size 16px
      letter-spacing 0.1px

    &-button-holder
      position absolute
      bottom 28px
      width 100%

    &__button
      margin 0 auto
      width 180px
      height 30px
      display block
      border 1px solid #999999
      padding 0 0 0 45px
      line-height 32px
      letter-spacing 0.4px
      text-decoration none
      color #000000
      background url('../img/button-arrow.png') no-repeat 181px 12px
      transition background-position 250ms ease
      &:hover
        background-position 191px 12px

    &__link
      margin 7px auto 0
      width 55px
      display block
      font-size 10px
      text-transform uppercase
      text-decoration none
      color #000000
      cursor pointer
      letter-spacing 0.8px
      transition color 200ms ease
      &:hover
        color #c91000

.ellipsis
  height 40px
  overflow hidden
  &:before
    content ""
    float left
    width 5px
    height 40px
  &:after
    content "\02026"
    float right
    position relative
    top -21px
    left 96%
    width 20px
    margin-left -20px
    padding-right 5px
    text-align right
    background linear-gradient(to right, rgba(255,255,255,0.5), white 10%, white)

  &-text
    float right
    width 100%
    margin-left -5px




